    .status-shipped {
        background-color: rgba(173, 216, 230, 0.5); /* Светло-голубой с прозрачностью 50% */
    }

    .status-delivered {
        background-color: rgba(128, 0, 128, 0.5); /* Фиолетовый с прозрачностью 50% */
    }

    .status-cancelled {
        background-color: rgba(255, 0, 0, 0.5); /* Красный с прозрачностью 50% */
    }

   

